<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentManagement">
        <activity
            android:name=".activities.EditStudentInformationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ShowStudentListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InputClassActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddStudentActivity"
            android:exported="false" />
        <activity
            android:name=".adapters.MainAdapter"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>